<table class="table">
  <% book.book_comments.each do |book_comment| %>
  <tr class="comments">
    <td>
      <%= link_to user_path(current_user) do %>
        <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg" %><br>
        <%= book_comment.user.name %>
      <% end %>
    </td>
    <td><%= book_comment.comment %></td>
          <% if book_comment.user == current_user %>
    <td><%= link_to 'Destroy', book_book_comments_path(book_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{book.id}"%></td>
          <% end %>
  </tr>
          <% end %>
</table>

